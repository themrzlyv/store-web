generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  identifier String   @unique @default("themirzaliyev_store_user")
  email      String   @unique
  password   String
  firstName  String
  lastName   String
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Bio {
  id         Int     @id @default(autoincrement())
  identifier String  @unique @default("themirzaliyev_store_bio")
  firstName  String?
  lastName   String?
  profession String?
  bio        String? @db.Text
  about      Json?
  image      String?
  socialid   Int?
  skills     Skill[]
  social     Social?
}

model Skill {
  id      Int      @id @default(autoincrement())
  name    String
  bioId   String
  Bio     Bio      @relation(fields: [bioId], references: [identifier])
  courses Course[] @relation("CourseToSkill")

  @@index([bioId], map: "Skill_bioId_fkey")
}

model Social {
  id       Int     @id @default(autoincrement())
  github   String?
  linkedin String?
  medium   String?
  mail     String?
  bioId    Int     @unique
  bio      Bio     @relation(fields: [bioId], references: [id])
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   Json
  image     String?
  views     Int      @default(0)
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  slug      String   @unique
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  image     String?
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  sourceUrl String?
  stars     Int      @default(0)
}

model Experience {
  id         Int       @id @default(autoincrement())
  company    String
  position   String
  companyUrl String
  image      String
  startDate  DateTime
  endDate    DateTime?
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  image       String?
  description String
  price       Float
  duration    Int
  createdAt   DateTime @default(now())
  techStack   Skill[]  @relation("CourseToSkill")
}

enum Role {
  ADMIN
  USER
}
